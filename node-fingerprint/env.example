# Database Configuration (Optional - untuk logging jika diperlukan)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=attendance_management_system
DB_USER=root
DB_PASSWORD=

# Fingerprint Device Configuration
FINGERPRINT_DEVICE_IP=192.168.0.201
FINGERPRINT_DEVICE_PORT=80
FINGERPRINT_DEVICE_PASSWORD=0
FINGERPRINT_COMM_KEY=0

# Laravel API Configuration
# Untuk development (local dengan port 8000):
LARAVEL_API_URL=http://127.0.0.1:8000/api
# Atau bisa juga: http://localhost:8000/api (sama saja)
# Untuk production (ganti dengan domain Anda, tanpa port):
# LARAVEL_API_URL=https://yourdomain.com/api

# API Token untuk security (optional tapi recommended)
# Generate token di Laravel atau gunakan .env Laravel: FINGERPRINT_API_TOKEN
LARAVEL_API_TOKEN=

# Sync Configuration
SYNC_INTERVAL=5000
# 5000 = 5 detik (real-time)
# 10000 = 10 detik
# 30000 = 30 detik
# 60000 = 1 menit

# Logging
LOG_LEVEL=info
LOG_FILE=logs/fingerprint.log
